@page
@model HeMaLogistics.Pages.Companies.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<br />
<h2 class="text-info">Edit Company</h2>
<br />
<form method="post">
    <div class="border backgroundWhite">
        <input type="hidden" asp-for="Company.CompanyId" />
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Company.Name"></label>
            </div>
            <div class="col-5">
                <input asp-for="Company.Name" class="form-control" />
            </div>
            <span asp-validation-for="Company.Name" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Company.StreetAddress"></label>
            </div>
            <div class="col-5">
                <input asp-for="Company.StreetAddress" class="form-control" />
            </div>
            <span asp-validation-for="Company.StreetAddress" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Company.City"></label>
            </div>
            <div class="col-5">
                <input asp-for="Company.City" class="form-control" />
            </div>
            <span asp-validation-for="Company.City" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Company.PostalCode"></label>
            </div>
            <div class="col-5">
                <input asp-for="Company.PostalCode" class="form-control" />
            </div>
            <span asp-validation-for="Company.PostalCode" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Company.State"></label>
            </div>
            <div class="col-5">
                <input asp-for="Company.State" class="form-control" />
            </div>
            <span asp-validation-for="Company.State" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Company.Contact"></label>
            </div>
            <div class="col-5">
                <input asp-for="Company.Contact" class="form-control" />
            </div>
            <span asp-validation-for="Company.Contact" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Company.Phone"></label>
            </div>
            <div class="col-5">
                <input asp-for="Company.Phone" class="form-control" />
            </div>
            <span asp-validation-for="Company.Phone" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="_EditAndBacktoListButton" />
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
